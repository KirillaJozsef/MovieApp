<UserControl x:Class="MovieApp.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MovieApp.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="460" d:DesignWidth="800">
    <Grid Name="MoviesGrid" SizeChanged="MoviesGrid_SizeChanged">
        <StackPanel>
            <TextBlock Text="What to watch"
                   Foreground="White"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" >

                <Button  x:Name="btnLeft" HorizontalAlignment="Left" VerticalAlignment="Center"
                         Style="{StaticResource LeftArrowButton}" Margin=" 0 0 10 0" Click="Swipe_Left">
                    
                </Button>

                <ItemsControl ItemsSource="{Binding VisibleMovies}"
                              ItemTemplate="{StaticResource MovieCard}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>

                <Button x:Name="btnRight" HorizontalAlignment="Right" VerticalAlignment="Center"
                        Style="{StaticResource RightArrowButton}" Margin=" 10 0 0 0" Click="Swipe_Right">
                </Button>

            </StackPanel>

        </StackPanel>

        

    </Grid>
</UserControl>
