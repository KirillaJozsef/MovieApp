<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MovieApp.Utils">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Theme/WatchlistButtonTheme.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="MovieCard" TargetType="ContentControl">
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                <Border Height="460"
                        Width="200"
                        CornerRadius="0,12,12,12"
                        Background="#1A1A1A"
                        Margin="0,0,5,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition  Height="290"/>
                            <RowDefinition  Height="35"/>
                                <RowDefinition Height="70"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="1"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal">

                                <TextBlock Text="⭐ 9.5"
                                       FontWeight="SemiBold"
                                       Margin="5,5,0,0"
                                       FontSize="16"
                                       Foreground="White"/>

                            <TextBlock Text="⭐"
                                       FontWeight="SemiBold"
                                       Margin="5,5,0,0"
                                       FontSize="16"
                                       Foreground="White"/>
                        </StackPanel>
                        <StackPanel Grid.Row="2"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Orientation="Vertical">

                                <TextBlock Text="The Lord of the Rings: The Fellowship of the Ring adsada sdadasdasd sadasdasdasdas dsadadas sdasdad asdasdasdas"
                                           TextWrapping="Wrap"
                                           TextTrimming="WordEllipsis"
                                           FontWeight="SemiBold"
                                           Margin="5,0,5,0"
                                           FontSize="16"
                                           Foreground="White"/>
                        </StackPanel>

                        <StackPanel Grid.Row="3"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">

                        <local:HoverButton Content="Watchlist"
                                           bgColor="#2c2c2c"
                                           hoverColor="#30353c"
                                           x:Name="WatchlistBtn"
                                           Style="{StaticResource buttonka}"/>

                                


                            </StackPanel>
                        
                            <Border CornerRadius="0,12,0,0">
                                <Border.Background>
                                    <ImageBrush Stretch="Fill" ImageSource="/Images/batman.jpg"/>
                                </Border.Background>
                            </Border>
                            
                        
                    </Grid>

                </Border>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>